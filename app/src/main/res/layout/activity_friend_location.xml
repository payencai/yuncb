<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friendcircle.FriendLocationActivity">

    <com.amap.api.maps2d.MapView
        android:layout_above="@id/ll_bottom"
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.amap.api.maps2d.MapView>
    <RelativeLayout
        android:elevation="2dp"
        android:id="@+id/rl_back"
        android:layout_margin="10dp"
        android:background="@drawable/black_background"
        android:layout_width="40dp"
        android:layout_height="40dp" >
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/white_back"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/tv_locate"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/iv_locate"
            android:layout_marginLeft="20dp"
            android:maxLines="2"
            android:layout_centerVertical="true"
            android:text="广州大学城信息枢纽楼广州大学城信息枢纽楼广州大学城信息枢纽楼"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_locate"
            android:src="@mipmap/localize_small"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
</RelativeLayout>